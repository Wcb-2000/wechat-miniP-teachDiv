page {
  background-color: #f5f5f5;
}

.goods {
  margin-bottom: 50px;
}

/* 购物车有数据 */
.goodItem {
  width: 100%;
  height: 100px;
  background-color: #fff;
  border-bottom: 1px solid #878787
}

.goodItem checkbox-group {
  float: left;
  line-height: 100px;
  margin-left: 5px;
}

.goodItem>image {
  width: 90px;
  float: left;
  margin: 5px 0;

}

.goodItem .middle {
  margin: 5px 0;
  float: left;
}

.goodItem .middle>view {
  height: 29px;
}

.goodItem .middle .price {
  color: red;
}

.goodItem .middle .number {
  position: relative;
}

.goodItem .middle .number>view {
  position: absolute;
  top: 0;
  width: 20px;
  height: 20px;
  border: 1px solid #878787;
  text-align: center;
  line-height: 20px;
}

.goodItem .middle .number .num {
  width: 40px;
  left: 20px;
}

.goodItem .middle .number .add {
  width: 20px;
  left: 60px;
}

.goodItem .delect {
  float: right;
  margin-top: 45px;
}

.goodItem .delect image {
  width: 40px;
}

/*删除商品  */


/* 结算 */
.down {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
  background-color: #fff;
}

.down .left {
  float: left;
  width: 40%;

}
.down .left text{
  color: red;
}

.down .right {
  float: right;
  width: 100px;
  padding-left: 10px;
  color: #fff;
  background-color: red;
}

/* 购物车为空 */
.null {
  text-align: center;
  font-size: 48rpx;
}

.null image {
  width: 50%;
  margin: 60rpx;
}

.null .toIndex {
  color: #fff;
  margin: 50rpx auto;
  background-color: #eb4450;
  width: 70%;
  padding: 20rpx 0;
}