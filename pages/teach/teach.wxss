/* pages/teach/teach.wxss */page{
  background-color: #f5f5f5;
}
.goodItem {
  width: 100%;
  text-align: center;
  margin-bottom: 50px;
}
.goodItem image{
  width: 80%;
}
.goodItem .title{
  font-size: 18px;
  line-height: 74rpx;
}
.goodItem .line {
  margin: 20rpx 20rpx;
  border-bottom: 1px solid gray;
}
.goodItem .testtt{
  /* top: -1rpx; */
  position: absolute;
  height: 22rpx;
  float: left;
  width: 40%;
  text-align: left;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.goodItem .testtt>view{
  width: 33.33%;
  float: left;
  position: relative;
  /* relative与absolute需要配合使用 没有relative数字框会跑动 */
}
.goodItem .testtt>view image{
  width: 50%;
}
.goodItem .desc{
  font-size: 16px;
  margin: 5rpx 20rpx 30rpx;
  border: 1px solid gray;
  color:black;
  text-align: start;
  background-color: #F0C35A;
}
.goodItem .price{
  margin: 10px 0;
}
.goodItem .price .new{
  font-size: 18px;
}
.goodItem .price .old{
  color: rosybrown;
}


/* 底部 */
.down{
  border-top: 1px solid gray;
  width: 100%;
  height: 45px;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #f5f5f5;
}
.down .left{
  padding: 6.9px 0;
  float: left;
  width: 40%;
  text-align: center;
  font-size: 25rpx;
}
.down .left>view{
  width: 33.33%;
  float: left;
  position: relative;
  /* relative与absolute需要配合使用 没有relative数字框会跑动 */
}
.down .left>view image{
  width: 50%;
}
.down .left>view .num{
  position: absolute;
  right: 0;
  top: 0;
  background-color: red;
  color: #fff;
  padding: 0 6rpx;
  border-radius: 10rpx;
}
.down .right{
  height: 40px;
  float: right;
  width: 55%;
  text-align: center;
  line-height: 40px;
  margin: 2.5px 0;
  color: #fff;
  font-size: 30rpx;
  border-radius:20px;
  overflow: hidden;
}
.down .right .addCar{
  width: 50%;
  float: left;
  background: linear-gradient(to right,#F0C35A,#ff9a04);
}
.goodItem .price .toPay{
  float: right;
  margin-right: 20rpx;
  overflow: hidden;
  display: inline;
  line-height: 30px;
  text-align: right;
  color: gray;
  text-decoration-line: underline;
  line-height: 120rpx;
}