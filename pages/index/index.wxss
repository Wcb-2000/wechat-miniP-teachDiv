page{
    background:linear-gradient(to bottom,#000000,#D7B847);
}

.index_swiper swiper {
    width: 95%;
    height: 250rpx;
    padding: 0 8px 5px 8px;
  }
  .index_swiper swiper image {
    width: 100%;
    height: 50%;
    border-radius: 20rpx;
  }
  .list{
      width: 96%;
      height: 270rpx;
    justify-items: center;
    text-align: center;
    padding: 0 7px ;
  }
.list .list2 {
    width: 24%;
    height: 100%;
    padding: 1px;
}
.select .start{
    width: 94%;
    padding: 0 9.6px;
}
.goods{
    overflow: hidden;
}
.good_item image{
    width: 90%;
}
.good_item {
    width: 46%;
    float: left;
    text-align: center;
    margin-left: 8px;
    margin-bottom: 4px;
    padding-top: 5px;
  padding-bottom: 5px;
  background-color: #c5c5c5;
}
.good_item title{
  
    font-size: 18px;
    margin: 10px 0;
    width: 80%;
}
.good_item .desc{
    color:black;
    /* 超出隐藏 */
    overflow: hidden;
    /* 强制文本不换行 */
    white-space: nowrap;
    /* 超出部分省略号 */
    text-overflow: ellipsis;
}
.good_item .price{
    color: red;
    margin: 10px 0;
}
.good_item .price .new{
    font-size: 18px;
}
.good_item .price .old{
    color: rosybrown;
    text-decoration: line-through;
}
.good_item .toPay{
    color: blanchedalmond;
    background-color: red;
    margin: 0 auto;
    width: 50%;
    padding: 10px 0;
}
 .other{
     margin-left:62px ;
     width: 60%;
     overflow: hidden;
   display: block;
   line-height: 30px;
    text-align: center;
    background-color: red;
    border:2px solid red;
    border-radius: 40px;
    color: #fff;
}