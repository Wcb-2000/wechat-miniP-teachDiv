.goodItem {
  width: 100%;
  height: 110px;
  background-color: rgb(209, 202, 202);
  border-bottom: 1px solid #878787
}

.goodItem>image {
  width: 100px;
  float: left;
  margin: 5px ;
}

.goodItem .middle {
  margin: 5px 5px;
  padding-top: 5px;
  float: left;
}

.goodItem .middle>view {
  height: 29px;
}

.goodItem .middle .price {
  color: red;
}

.goodItem .delect {
  float: right;
  margin-top: 45px;
}

.goodItem .delect image {
  width: 40px;
}

/* 收藏为空 */
.null {
  text-align: center;
  font-size: 48rpx;
}

.null image {
  width: 50%;
  margin: 60rpx;
}

.null .toIndex {
  color: #fff;
  margin: 50rpx auto;
  background-color: #eb4450;
  width: 70%;
  padding: 20rpx 0;
}