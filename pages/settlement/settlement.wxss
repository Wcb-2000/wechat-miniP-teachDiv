/* 公共样式 */
page{
  background-color: #f5f5f5;
}
.current{
  width: 90%;
  margin:10px auto 0;
  background-color: #fff;
  border-radius: 10px;
  padding: 10px;
}
.parentLevel::after{
  content: "";
  display: block;
  clear: both;
}
.left{
  float: left;
}
.right{
  float: right;
}
.bg{
  width: 90%;
  height: 6px;
  margin:35px  0;
  padding: 0 10px;
}
.col{
  color: #727272;
}

/* 地址为空 */
.null{
  padding: 10px;
  line-height: 55px;
  overflow: hidden;
}
.null image{
  width: 40px;
  margin:10px 10px 0 0;
}

/* 地址不为空 */
.address{
  height: 81px;
  line-height: 25px;
}
.address .right{
  line-height: 75px;
}

/* 商品 */
.goods{
  margin-bottom: 60px;
}
.goodItem{
  line-height: 30px;
}
.goodItem image{
  width: 80px;
  margin-right: 10px;
}
.goodItem .right{
  text-align: right;
}

/* 底部 */
.down{
  border-top: 1px solid gray;
  width: 100%;
  height: 50px;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  line-height: 50px;
}
.down .left{
  padding-left: 20px;
}
.down text{
  font-weight: 800;
  color: #ff6422;
}
.down .right{
  margin:5px 15px 5px 0;
  width: 100px;
  height: 40px;
  line-height:40px ;
  background: #ff6422;
  color:#fff;
  text-align: center;
  border-radius: 20px;
}